mixin search(title)
    form(id="form-search" form-search)
        .input-group
            input(
                type="text"
                placeholder="Enter search keywords"
                name="keyword"
                class="form-control custom-input"
                value=title
                input-search
            )
            .input-group-text.custom-input-group-text
                button(
                    class="btn btn-light custom-button"
                    type="submit"
                    button-search
                ) Find
