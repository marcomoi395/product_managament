extends ../../layout/default
include ../../mixins/filter-status
include ../../mixins/search
include ../../mixins/pagination
include ../../mixins/form-change-multi
include ../../mixins/form-change-status
include ../../mixins/flash-message

block main
    +flash-message(2000)

    .row
        .col-10
            h2.inner-content.p-md-2 #{pageTitle}
        .col-2
            a(href="products/create" class="btn btn-outline-dark") Add New


    .card.mb-3
        .card-header Filters and Search
        .card-body
            .row
                .col-6
                    +filter-status(filterStatus)
                .col-6
                    +search(title)

    .card.mb-3
        .card-header List of products
        .card-body
            +form-change-multi

            table(class="table table-hover table-sm align-middle" checkbox-multi)
                thead
                    tr(class="inner-content")
                        th.text-center
                            input(class="form-check-input" type="checkbox" name="checkall")
                        th.text-center No
                        th.text-center Picture
                        th Title
                        th.text-center Author
                        th.text-center Price
                        th.text-center Position
                        th.text-center Status
                        th.text-center Act
                each item, index in products
                    tbody
                        tr
                            td.text-center
                                input(class="form-check-input" type="checkbox" name="check-id" value=item.id)
                            td.text-center(class="inner-content") #{index + 1}
                            td.text-center
                                img(
                                    src=item.thumbnail
                                    alt=item.title
                                    width="55px"
                                    height="55px"
                                    style="border-radius: 28%; object-fit: cover; margin: 3px 0px;"
                                )
                            td(class="inner-content") #{item.title}
                            td.text-center(class="inner-content") #{item.author}
                            td.text-center(class="inner-content") #{item.price}$
                            td.text-center
                                input(
                                    type="number"
                                    value=item.position
                                    style="width: 40px"
                                    min="1"
                                    name="position"
                                )
                            td.text-center
                                if(item.status === "active")
                                    b(class="btn btn-custom status-active" data-status=item.status data-id=item.id button-change-status) Active
                                else
                                    b(class="btn btn-custom status-inactive" data-status=item.status data-id=item.id button-change-status) Inactive
                            td.text-center
                                button.change(class="btn btn-custom edit") Modify
                                button.delete(class="btn btn-custom delete" button-delete-product data-id=item.id) Delete

    +pagination(pagination)
    +form-change-status

    form(
        action=""
        method="POST"
        id="form-delete-product"
        data-path=`${prefixAdmin}/products/delete-product`
    )

    script(src="/admin/js/product.js")