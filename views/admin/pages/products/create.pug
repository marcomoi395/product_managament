extends ../../layout/default

block main

    .container.mt-5(form-add-product)
        .row
            .col-10
                h2.mb-4 Add New Product
            .col-2
                button.btn.btn-outline-dark(type='submit') Add New

        form(action='/path/to/your/backend', method='POST', enctype='multipart/form-data')
            .form-group
                .row
                    .col-md-6
                        label(label-margin for='title') Title
                        input#title.form-control(type='text', name='title', placeholder='Enter title', required='')
                    .col-md-6
                        label(label-margin for='author') Author
                        input#author.form-control(type='text', name='author', placeholder='Enter author name', required='')
            .form-group
                .row
                    .col-md-4
                        label(label-margin for='price') Price
                        input#price.form-control(type='number', step='1', min=0, name='price', placeholder='Enter price', required='')
                    .col-md-4
                        label(label-margin for='stock') Stock
                        input#stock.form-control(type='number', step='1', min=1, name='price', placeholder='Enter stock', required='')
                    .col-md-4
                        label(label-margin for='position') Position
                        input#position.form-control(type='number', step='0.01', name='price', placeholder='Enter position (default will be first)', required='')

            .form-group
                label(label-margin for='description') Description
                textarea#description.form-control(name='description', rows='3', placeholder='Enter product description', required='')
            .form-group
                label(label-margin for='thumbnail') Picture (Link)
                input#thumbnail.form-control(type='text', name='thumbnail', required='')
            .form-group(label-margin)
                .row
                    .col-1.form-check
                        input#status.form-check-input(type='radio', name='status', value='active', checked='')
                        label.form-check-label(for='status') Active
                    .col-1.form-check
                        input#status2.form-check-input(type='radio', name='status', value='inactive')
                        label.form-check-label(for='status2') Inactive



    script(src="/admin/js/product.js")